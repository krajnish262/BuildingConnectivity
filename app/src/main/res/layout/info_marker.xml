<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_marker_info"
    android:orientation="vertical"
    android:background="@android:color/transparent"
    android:layout_gravity="bottom|right"
    android:layout_margin="@dimen/dp5"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/img_marker_ftth"
        android:padding="@dimen/dp5"
        android:src="@drawable/icons8marker48black"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textColor="@color/black"
        android:text="FTTH"
        android:textAllCaps="true"
        android:textSize="18sp"
        android:textStyle="bold"
        android:padding="@dimen/dp5"
        android:layout_alignBottom="@+id/img_marker_ftth"
        android:layout_alignTop="@+id/img_marker_ftth"
        android:gravity="center_vertical"
        android:layout_toRightOf="@+id/img_marker_ftth"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/img_marker_copper"
        android:layout_below="@+id/img_marker_ftth"
        android:padding="@dimen/dp5"
        android:src="@drawable/icons8marker48blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textColor="@color/black"
        android:layout_below="@+id/img_marker_ftth"
        android:text="Copper"
        android:textAllCaps="true"
        android:textSize="18sp"
        android:textStyle="bold"
        android:padding="@dimen/dp5"
        android:layout_alignBottom="@+id/img_marker_copper"
        android:layout_alignTop="@+id/img_marker_copper"
        android:gravity="center_vertical"
        android:layout_toRightOf="@+id/img_marker_copper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</RelativeLayout>