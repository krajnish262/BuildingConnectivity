<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColor"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    tools:context=".Login">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_below="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/airtelLogo"
                    android:visibility="gone"
                    android:layout_width="160dp"
                    android:layout_height="130dp"
                    android:layout_gravity="center"
                    android:layout_margin="40dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="start"
                    android:padding="@dimen/dp5"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="10dp"
                    android:textColor="@color/white"
                    android:text="Enter OTP"/>

                <LinearLayout
                    android:id="@+id/root_otp_layout"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:layout_marginStart="55dp"
                    android:layout_marginEnd="55dp"
                    android:padding="@dimen/dp5"
                    android:orientation="horizontal"
                    android:weightSum="4">

                    <EditText
                        android:id="@+id/otp_edit_box1"
                        android:textColor="@color/white"
                        android:background="@drawable/selector_focus_otp"
                        android:layout_weight="1"
                        android:cursorVisible="false"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="20dp"
                        android:gravity="center"
                        android:inputType="number"
                        android:maxLength="1"
                        android:textSize="25sp"/>

                    <EditText
                        android:id="@+id/otp_edit_box2"
                        android:layout_weight="1"
                        android:textColor="@color/white"
                        android:background="@drawable/selector_focus_otp"
                        android:cursorVisible="false"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="20dp"
                        android:gravity="center"
                        android:textSize="25sp"
                        android:inputType="number"
                        android:maxLength="1"/>

                    <EditText
                        android:id="@+id/otp_edit_box3"
                        android:layout_weight="1"
                        android:textColor="@color/white"
                        android:background="@drawable/selector_focus_otp"
                        android:cursorVisible="false"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="20dp"
                        android:gravity="center"
                        android:textSize="25sp"
                        android:inputType="number"
                        android:maxLength="1"/>

                    <EditText
                        android:id="@+id/otp_edit_box4"
                        android:layout_width="0dp"
                        android:textColor="@color/white"
                        android:background="@drawable/selector_focus_otp"
                        android:cursorVisible="false"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:textSize="25sp"
                        android:layout_weight="1"
                        android:inputType="number"
                        android:maxLength="1" />

                    <!--<EditText
                        android:id="@+id/otp_edit_box4"
                        android:layout_width="0dp"
                        android:cursorVisible="false"
                        android:layout_height="60dp"
                        android:gravity="center"
                        android:textSize="30sp"
                        android:layout_weight="1"
                        android:inputType="number"
                        android:maxLength="1"
                        android:background="@drawable/bg_otp_item" />-->


                </LinearLayout>

                <TextView
                    android:id="@+id/tvSentDesc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_marginTop="@dimen/dp20"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:textSize="14sp"
                    android:text="@string/we_have_sent_code"/>

                <Button
                    android:id="@+id/btnNextOtp"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginTop="30dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/button_round"
                    android:text="Next"
                    android:textAllCaps="true"
                    android:textColor="@android:color/white" />

                <TextView
                    android:id="@+id/tvCountdown"
                    android:visibility="gone"
                    android:textColor="@color/white"
                    android:layout_marginTop="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"/>

                <RelativeLayout
                    android:layout_marginTop="@dimen/dp30"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tvResendSMS"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:gravity="center_horizontal"
                        android:textSize="16sp"
                        android:drawablePadding="@dimen/dp10"
                        android:text="Resend SMS"
                        app:drawableLeftCompat="@drawable/ic_outline_message_24" />


                    <TextView
                        android:id="@+id/tvCountdownResend"
                        android:visibility="visible"
                        android:text="(0.15)"
                        android:gravity="center_vertical"
                        android:layout_gravity="center_vertical"
                        android:layout_toEndOf="@+id/tvResendSMS"
                        android:layout_marginStart="@dimen/dp5"
                        android:textColor="@color/white"
                        android:drawablePadding="@dimen/dp5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>


                <TextView
                    android:id="@+id/tvEditNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:layout_gravity="center"
                    android:textSize="16sp"
                    android:layout_marginTop="@dimen/dp30"
                    android:drawablePadding="@dimen/dp10"
                    android:text="Edit Phone Number"
                    app:drawableLeftCompat="@drawable/ic_baseline_edit_24" />

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

</LinearLayout>